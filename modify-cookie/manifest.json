{
	"manifest_version": 2,
	"name": "modify-cookie",
	"version": "1.0.0",
	"description": "修改指定域下的cookie",
	"icons":
	{
		"16": "img/icons@16.png",
		"32": "img/icons@32.png",
		"48": "img/icons@48.png",
		"128": "img/icons@128.png"
	},
	"browser_action":
	{
		"default_icon": "img/icons@48.png",
		"default_title": "修改cookie",
		"default_popup": "popup.html"
	},
	"background":
	{
		"page": "background.html"
	},
	"permissions":
	[
		"tabs",
		"notifications",
		"cookies",
		"http://*/*",
		"https://*/*"
	]
}
